<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="ApplicationTheme" parent="TranslucentTheme" >
        <item name="android:windowBackground">@drawable/beauty11</item>
    </style>

    <style name="TranslucentTheme" parent="BaseTheme">
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>
    <style name="WhiteTheme" parent="BaseTheme">
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="BlueTheme" parent="BaseTheme">
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/blue_light</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@android:color/white</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>
</resources>
