<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/big_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/big_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/big_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/big_icon"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/big_samllicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/big_icon"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/big_largeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/big_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/big_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/big_title"
            android:layout_toLeftOf="@id/big_largeicon"
            android:layout_toRightOf="@id/big_samllicon"
            android:maxLines="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/big_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/big_container"
        android:layout_marginTop="16dp" />
</RelativeLayout>