<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/common_tilte"
        layout="@layout/title_layout"/>

    <com.victor.playandroid.view.CircleMenuView
        android:id="@+id/main_menu"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x400"
        android:layout_gravity="center"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/whos_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:fitsSystemWindows="true" />

    <android.support.design.widget.TabLayout
        android:id="@+id/whos_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/blue_light"
        app:tabTextColor="@color/black_light" />

</LinearLayout>